/**
 * Implementation of hook_install().
 */
function book_install() {
  // Create tables.
  drupal_install_schema('book');
}

/**
 * Implementation of hook_uninstall().
 */
function book_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('book');
}
