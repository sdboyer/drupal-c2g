/**
 * Implementation of hook_install().
 */
function menu_install() {
  // Create tables.
  drupal_install_schema('menu');
}

/**
 * Implementation of hook_uninstall().
 */
function menu_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('menu');
  menu_rebuild();
}
